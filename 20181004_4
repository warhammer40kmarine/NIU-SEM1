#include <iostream>
#include <cstdlib>

using namespace std;

int main(void)
{
    char input;
    cout << "insert English alphabet:" << endl;
    cin >> input;
    int input_get = input;
    cout << "the alphabet is:" << input << ",code is:" <<  input_get << endl;
    input_get = input_get - 65;

    cout << "start:" << endl;
    for(int i = 0;i <= input_get ;i++)
    {
        for(int x = 0;x <= i;x++)
        {
            cout << char(i + 65);
        }
        cout << endl;
    }
    return 0;
}
